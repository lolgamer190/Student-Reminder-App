<ReminderScreen>:
    FloatLayout:
        MDLabel:
            text: "Reminders for the day, "
        MDBoxLayout:
            adaptive_height: True
            spacing: 10
            padding: 10
            MDIconButton:
                icon: 'home-variant-outline'
                on_release: app.change_screen("home_screen")
            MDIconButton:
                icon: 'calendar-month-outline'
                on_release: app.change_screen("calendar_screen")
            MDIconButton:
                icon: 'plus-box-outline'
                on_release: app.change_screen("syllabus_screen")
            MDIconButton:
                icon: 'bell'
            MDIconButton:
                on_release: app.change_screen("profile_screen")
                FitImage:
                    source:'profile.jpg'
                    size_hint: None, None
                    size: 25, 25
                    radius: [25,]
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
            