<HomeScreen>:
    FloatLayout:
        MDLabel:
            id: welcome
            text: "Good Morning Helena Hills,"
            bold: True
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint:{'top': .9}

        MDLabel:
            text: "Classes"
            bold: True
            font_size: 20
            size_hint_y: None
            height:self.texture_size[1]
            pos_hint:{'top': .75}

        GridLayout:
            size_hint_y: None
            height: 200
            width: self.minimum_width
            pos_hint:{'top': .7}
            cols: 2
            MDLabel:
                text: "Class Name"
            MDLabel:
                text: "     Time"
            MDLabel:
                text: "Class 1"
                bold: True
            MDLabel:
                text: "11:30 - 12:10"
            MDLabel:
                text: "Class 2"
                bold: True
            MDLabel:
                text: "12:30 - 13:50"
            MDLabel:
                text: "Class 3"
                bold: True
            MDLabel:
                text: "15:00 - 15:40"
            MDLabel:
                text: "Class 4"
                bold: True
            MDLabel:
                text: "16:30 - 17:10"

            

        MDBoxLayout:
            adaptive_height: True
            spacing: 10
            padding: 10
            MDIconButton:
                icon: 'home-variant'
            MDIconButton:
                icon: 'calendar-month-outline'
                on_release: app.change_screen("calendar_screen")
            MDIconButton:
                icon: 'plus-box-outline'
                on_release: app.change_screen("syllabus_screen")
            MDIconButton:
                icon: 'bell-outline'
                on_release: app.change_screen("reminder_screen")
            MDIconButton:
                icon: 'help-circle'
                on_release: app.change_screen("faq_screen")
            MDIconButton:
                on_release: app.change_screen("profile_screen")
                FitImage:
                    source:'profile.jpg'
                    size_hint: None, None
                    size: 25, 25
                    radius: [25,]
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
