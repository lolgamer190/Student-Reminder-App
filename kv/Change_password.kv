<ChangePassword>
    BoxLayout:
        size_hint: .8,.8
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            text: "Old Password:"
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15    
        MDTextField:
            id: old_password
            hint_text: "Old password"
            mode: 'round'
            text_color_focus: 0,0,0,1
            text_color_normal: 0,0,0,1  
        MDLabel:
            text: "New Password:"
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextField:
            id: new_password
            hint_text: "New Password"
            mode: 'round'
            text_color_focus: 0,0,0,1
            text_color_normal: 0,0,0,1
        MDLabel:
            text: "Confirm New Password:"
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextField:
            id: confirm_password
            hint_text: "Confirm New Password"
            mode: 'round'
            text_color_focus: 0,0,0,1
            text_color_normal: 0,0,0,1
        MDFillRoundFlatButton:
            text: "Confirm"
            halign: 'center'
            font_style: 'Button'
            size_hint: (1,0)
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_light
            md_bg_color: 0,0,0,1
            pos_hint: {"center_x": 0.5}
            on_release:
                app.change_screen("profile_screen"), app.loginDetails.updatePassword(app.x.email, new_password.text, confirm_password.text) if app.loginDetails.validateAccount(app.x.email, old_password.text) else app.no_validation_dialog()
        MDFillRoundFlatButton:
            text: "Go Back"
            halign: 'center'
            font_style: 'Button'
            size_hint: (1,0)
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_light
            md_bg_color: 0,0,0,1
            pos_hint: {"center_x": 0.5}
            on_release:
                app.change_screen("profile_screen")