<FaqScreen>:
    name: "faq_screen"

    FloatLayout:
        padding: dp(10)

        
        ScrollView:
            id: faq_scroll
            size_hint: (1, 0.7)
            pos_hint: {"top": 0.85}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: faq_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(10)

        # Help button (on top of other elements)
        MDFillRoundFlatButton:
            text: "Still Need Help?"
            size_hint_y: None
            height: dp(50)
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1  # White text
            md_bg_color: 0, 0, 0, 1  # Black background
            pos_hint: {"center_x": 0.5, "bottom": 0}
            on_release: app.show_help_popup()
        
        # Top bar with navigation
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            orientation: 'horizontal'
            spacing: dp(10)
            pos_hint: {"top": 1}
            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1  # Black text
                on_release: app.change_screen('profile_screen')
            MDLabel:
                text: 'FAQ'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1  # Black text