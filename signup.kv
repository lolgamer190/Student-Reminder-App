<SignupScreen>:
    BoxLayout:
        size_hint: .8,.8
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: "app_name"
            text: "App name"
            bold: True
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y:10
        MDLabel:
            id: "sign_up"
            text: "Create an account"
            bold: True
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
        MDLabel:
            text: "Enter your email to sign up for this app"
            font_size: 13
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
        MDTextField:
            hint_text: "email@domain.com"
            mode: 'round'
            text_color_focus: 0,0,0,1
            text_color_normal: 0,0,0,1
        MDFillRoundFlatButton:
            text: "Sign up with email"
            halign: 'center'
            font_style: 'Button'
            size_hint: (1,0)
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_light
            md_bg_color: 0,0,0,1
            pos_hint: {"center_x": 0.5}
            on_release: app.change_screen("login_screen")
        MDLabel:
            text: "Have an account?"
            font_style: 'Caption'
            halign: 'center'
            font_size: 12
            size_hint_y: None
            height: self.texture_size[1]
        MDFillRoundFlatButton:
            text: "Log in"
            halign: 'center'
            font_style: 'Button'
            size_hint: (1,0)
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_light
            md_bg_color: 0,0,0,1
            pos_hint: {"center_x": 0.5}
            on_release: app.change_screen("login_screen")
        MDLabel:
            text: "or continue with"
            font_style: 'Caption'
            halign: 'center'
            font_size: 12
            size_hint_y: None
            height: self.texture_size[1]
        MDFillRoundFlatIconButton:
            text: "     Google"
            halign: 'center'
            font_style: 'Button'
            icon: 'google.png'
            size_hint: (1,0)
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_dark
            pos_hint: {"center_x": 0.5}
        MDLabel:
            text: "By clicking continue, you agree to our Terms of Service and Privacy Policy"
            font_style: 'Caption'
            halign: 'center'
            font_size: 9
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            padding_y: 30
